{
  "name": "fortium-metrics-web-service",
  "version": "1.0.0",
  "description": "External Metrics Web Service for Fortium AI-Augmented Development Analytics",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "start:otel": "node --require ./src/tracing/otel-init.js dist/app.js",
    "dev": "tsx watch src/app.ts",
    "dev:otel": "tsx --require ./src/tracing/otel-init.ts src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance --testTimeout=60000",
    "test:security": "jest --testPathPattern=security",
    "test:auth": "jest --testPathPattern=auth",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:test": "NODE_ENV=test tsx src/scripts/migrate.ts",
    "seed": "tsx src/scripts/seed.ts",
    "docker:build": "docker build -t fortium-metrics-service .",
    "docker:run": "docker run -p 3000:3000 fortium-metrics-service",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "signoz:start": "docker-compose -f docker-compose.signoz.yml up -d",
    "signoz:stop": "docker-compose -f docker-compose.signoz.yml down",
    "signoz:logs": "docker-compose -f docker-compose.signoz.yml logs -f",
    "signoz:clean": "docker-compose -f docker-compose.signoz.yml down -v && docker system prune -f",
    "otel:test": "tsx scripts/test-otel-integration.ts",
    "otel:test-auto": "tsx scripts/test-auto-instrumentation.ts",
    "otel:validate": "tsx scripts/test-auto-instrumentation.ts",
    "validate:signoz": "tsx scripts/validate-signoz-integration.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "fortium",
    "metrics",
    "analytics",
    "ai-augmented-development",
    "productivity",
    "jwt",
    "sso",
    "authentication",
    "multi-tenant"
  ],
  "author": "Fortium Partners Engineering Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/ws": "^8.18.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "seq-logging": "^3.0.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-transport": "^4.9.0",
    "ws": "^8.18.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/exporter-prometheus": "^0.205.0",
    "@opentelemetry/semantic-conventions": "^1.27.0",
    "@opentelemetry/instrumentation-http": "^0.54.0",
    "@opentelemetry/instrumentation-express": "^0.54.0",
    "@opentelemetry/resources": "^1.27.0",
    "@opentelemetry/api-logs": "^0.54.0",
    "@opentelemetry/sdk-logs": "^0.54.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "crypto": "^1.0.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FortiumPartners/claude-config.git",
    "directory": "src/monitoring-web-service"
  },
  "bugs": {
    "url": "https://github.com/FortiumPartners/claude-config/issues"
  },
  "homepage": "https://github.com/FortiumPartners/claude-config#readme"
}
