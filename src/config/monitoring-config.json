{
  "version": "1.0.0",
  "lastUpdated": "2025-09-03T00:00:00Z",
  "globalDefaults": {
    "debounceTime": 1000,
    "maxBufferSize": 100,
    "ignorePatterns": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/build/**",
      "**/*.log",
      "**/__pycache__/**",
      "**/*.pyc"
    ]
  },
  "agentConfigurations": {
    "directory-monitor": {
      "description": "Directory monitoring agent with /fold-prompt triggering",
      "enabled": true,
      "subscriptionType": "directoryMonitor",
      "patterns": [
        "**/*.md",
        "**/*.yaml", 
        "**/*.yml",
        "**/*.json",
        "**/*.txt",
        "**/*.rst"
      ],
      "eventTypes": ["fileCreated", "fileModified", "fileDeleted"],
      "options": {
        "changeThreshold": 10,
        "cooldownMinutes": 5,
        "debounceTime": 2000,
        "bufferEvents": true,
        "priorityPatterns": [
          "**/*.md",
          "**/*.yaml",
          "**/*.yml", 
          "**/*.json"
        ],
        "weightings": {
          "documentation": 2.0,
          "configuration": 1.5,
          "code": 1.0,
          "other": 0.5
        }
      },
      "actions": [
        {
          "type": "command",
          "command": "/fold-prompt",
          "description": "Trigger project context optimization"
        }
      ]
    },
    "manager-dashboard-agent": {
      "description": "Manager dashboard file metrics collection",
      "enabled": true,
      "subscriptionType": "fileMetrics",
      "patterns": [
        "**/*.js",
        "**/*.ts", 
        "**/*.py",
        "**/*.md",
        "**/*.json",
        "**/*.yaml",
        "**/*.yml"
      ],
      "eventTypes": ["fileCreated", "fileModified", "fileDeleted"],
      "options": {
        "debounceTime": 500,
        "bufferEvents": false,
        "maxMetrics": 1000,
        "aggregationInterval": 3600,
        "metricsCategories": [
          "velocity",
          "churn_rate",
          "file_types",
          "activity_patterns",
          "productivity_score"
        ]
      },
      "storage": {
        "database": "sqlite",
        "retentionDays": 90,
        "exportFormats": ["json", "csv", "yaml"]
      }
    },
    "code-reviewer": {
      "description": "Code review agent monitoring for quality gates",
      "enabled": false,
      "subscriptionType": "codeQuality",
      "patterns": [
        "**/*.js",
        "**/*.ts",
        "**/*.py",
        "**/*.java",
        "**/*.go",
        "**/*.rs"
      ],
      "eventTypes": ["fileCreated", "fileModified"],
      "options": {
        "debounceTime": 1000,
        "qualityThreshold": 8,
        "scanOnModification": true,
        "excludeTestFiles": false
      },
      "actions": [
        {
          "type": "scan", 
          "description": "Run automated code quality checks"
        }
      ]
    },
    "test-runner": {
      "description": "Test runner agent for CI/CD integration",
      "enabled": false,
      "subscriptionType": "testing",
      "patterns": [
        "**/test/**/*.js",
        "**/tests/**/*.py",
        "**/*.test.ts",
        "**/*.spec.js"
      ],
      "eventTypes": ["fileCreated", "fileModified"],
      "options": {
        "debounceTime": 2000,
        "autoRunTests": true,
        "testSuites": ["unit", "integration"]
      },
      "actions": [
        {
          "type": "test",
          "command": "npm test",
          "description": "Run test suite on test file changes"
        }
      ]
    }
  },
  "environmentOverrides": {
    "development": {
      "globalDefaults": {
        "debounceTime": 500
      },
      "agentConfigurations": {
        "directory-monitor": {
          "options": {
            "changeThreshold": 5,
            "cooldownMinutes": 2
          }
        }
      }
    },
    "production": {
      "globalDefaults": {
        "debounceTime": 2000
      },
      "agentConfigurations": {
        "directory-monitor": {
          "options": {
            "changeThreshold": 15,
            "cooldownMinutes": 10
          }
        }
      }
    }
  },
  "customPatterns": {
    "documentation": [
      "**/*.md",
      "**/*.rst", 
      "**/*.txt",
      "**/docs/**/*"
    ],
    "configuration": [
      "**/*.json",
      "**/*.yaml",
      "**/*.yml",
      "**/*.toml",
      "**/*.ini",
      "**/config/**/*"
    ],
    "frontend": [
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.vue",
      "**/*.svelte"
    ],
    "backend": [
      "**/*.py",
      "**/*.java",
      "**/*.go",
      "**/*.rs",
      "**/*.rb",
      "**/*.php"
    ],
    "tests": [
      "**/test/**/*",
      "**/tests/**/*",
      "**/*.test.*",
      "**/*.spec.*"
    ]
  }
}