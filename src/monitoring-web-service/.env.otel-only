# OTEL-Only Logging Configuration
# Use this configuration to enable OTEL-only logging for both frontend and backend

# Backend OTEL Configuration
OTEL_ENABLE_LOGGING=true
OTEL_LOGGING_ONLY=true
OTEL_ENABLE_PARALLEL_LOGGING=false
OTEL_ENABLE_CONSOLE_LOGGING=false
OTEL_ENABLE_FILE_LOGGING=false
OTEL_ENABLE_SEQ_FALLBACK=false

# OTEL Collector Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=http://localhost:4318/v1/logs
OTEL_SERVICE_NAME=fortium-metrics-backend
OTEL_SERVICE_VERSION=1.0.0
OTEL_SERVICE_NAMESPACE=fortium-platform

# OTEL Resource Attributes
OTEL_RESOURCE_ATTRIBUTES=service.name=fortium-metrics-backend,service.version=1.0.0,service.namespace=fortium-platform,deployment.environment=otel-only

# OTEL Feature Flags
OTEL_ENABLE_BATCH_LOGGING=true
OTEL_ENABLE_CIRCUIT_BREAKER=true
OTEL_ENABLE_LOG_CORRELATION=true
OTEL_ENABLE_TRACE_CONTEXT=true
OTEL_ENABLE_LOGGING_PERFORMANCE=true
OTEL_ENABLE_LOGGING_HEALTH_CHECKS=true
OTEL_ENABLE_PII_FILTERING=true
OTEL_ENABLE_DATA_MASKING=true

# Frontend OTEL Configuration
VITE_OTEL_LOGGING_ONLY=true
VITE_API_BASE_URL=http://localhost:3000
VITE_OTEL_ENDPOINT=/api/v1/otel/logs
VITE_OTEL_SERVICE_NAME=fortium-metrics-frontend
VITE_OTEL_SERVICE_VERSION=1.0.0
VITE_OTEL_SERVICE_NAMESPACE=fortium-platform

# Disable Console Logging
VITE_DISABLE_CONSOLE_LOGGING=true

# OTEL Collector Backend Configuration
OTEL_LOGS_BATCH_SIZE=100
OTEL_LOGS_FLUSH_INTERVAL=10000
OTEL_LOGS_REQUEST_TIMEOUT=5000
OTEL_LOGS_MAX_RETRIES=3

# Security Configuration
OTEL_ENABLE_ATTRIBUTE_FILTERING=true
OTEL_ENABLE_SENSITIVE_DATA_MASKING=true
OTEL_PII_FILTERING_ENABLED=true

# Performance Configuration
OTEL_LOGS_COMPRESSION_ENABLED=true
OTEL_BATCH_PROCESSING_ENABLED=true
OTEL_CIRCUIT_BREAKER_ENABLED=true

# Development/Debug (set to false for production)
OTEL_ENABLE_DEBUG_LOGGING=false
OTEL_ENABLE_VERBOSE_LOGGING=false
OTEL_ENABLE_VALIDATION_LOGGING=false

# Environment
NODE_ENV=production