{
  "name": "monitoring-web-service",
  "version": "1.0.0",
  "description": "External metrics web service for Fortium Claude Code configurations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/**/*.integration.test.ts'",
    "test:unit": "jest --testMatch='**/tests/**/*.test.ts' --testPathIgnorePatterns='**/integration.test.ts'",
    "test:database": "jest --testMatch='**/tests/database/**/*.test.ts'",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "partition:manager": "ts-node src/scripts/partition-manager.ts",
    "partition:stats": "npm run partition:manager stats",
    "partition:maintenance": "npm run partition:manager maintenance",
    "partition:health": "npm run partition:manager health",
    "migrate": "ts-node src/scripts/migration-manager.ts",
    "migrate:create": "npm run migrate create",
    "migrate:status": "npm run migrate status",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:validate": "npm run migrate validate"
  },
  "keywords": [
    "metrics",
    "monitoring",
    "multi-tenant",
    "claude-code",
    "fortium"
  ],
  "author": "Fortium Partners",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "pg": "^8.11.3",
    "ws": "^8.13.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "redis": "^4.6.7",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/pg": "^8.10.2",
    "@types/ws": "^8.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/joi": "^17.2.3",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "prettier": "^3.0.0",
    "testcontainers": "^10.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/tests/**/*.integration.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/tests/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.ts"],
    "testTimeout": 30000
  }
}